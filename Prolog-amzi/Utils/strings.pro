 /*
  *  מחרוזת <-> תנאי
  *
  */

תנאי(_מחרוזת,_תנאי) :-
	לא_משתנה(_מחרוזת),
	מחרוזת_אטום(_מחרוזת1,_מחרוזת),
	מחרוזת_תנאי(_מחרוזת1,_תנאי), !.
תנאי(_מחרוזת,_תנאי) :-
	מחרוזת_תנאי(_מחרוזת1,_תנאי),
	מחרוזת_אטום(_מחרוזת1,_מחרוזת).

מחרוזת_תנאי(X,Y) :-
	string_term(X,Y).

מחרוזת_אטום(X,Y) :-
	string_atom(X,Y).